{
    "name": "webapp",
    "dependencies": {
        "eslint": "latest",
        "express": "^4.16.3",
        "mocha": "latest"
    },
    "devDependencies": {},
    "scripts": {
        "start": "node server/src/js/main.js ./webapp/dist",
        "clean": "rm -rf node_modules",
        "lint": "eslint -c .eslintrc.json server/src/js/**",
        "test": "mocha server/test/test",
        "debug": "npm run clean && npm install",
        "build": "npm run clean && npm install && mkdr ./server/dist && npm run js:min",
        "prejs": "npm install lib && npm run lint && npm test",
        "js": "browserify server/src/js/main.js > server/dist/main.js",
        "js:min": "npm run js && babel-minify server/dist/main.js > server/dist/main.min.js",
        "postjs:min": "rm -f server/dist/main.js"
    }
}
